<p style="color: green"><%= notice %></p>

<div class="d-flex flex-row justify-content-between">
  <div class="col-4">
    <input class="form-control form-control-dark w-100" type="text" placeholder="Search public key" aria-label="Search">
  </div>
  <div>
    <%= button_to "新メンバーを追加", {controller: 'users', action: 'new'}, {method: :get, class: "btn btn-primary"} %>
  </div>
</div>

<div id="users">
  <table class="table table-striped table-hover">
    <thead>
      <th>名前</th>
      <th>githubアカウント</th>
      <th>所属チーム</th>
      <th>雇用形態</th>
      <th>email</th>
      <th></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to "#{user.name}", user %></td>
          <td><%= user.github_account %></td>
          <td><%= user.team %></td>
          <td><%= user.employment %></td>
          <td><%= user.email %></td>
          <td><button class="btn btn-outline-danger btn-sm">削除</button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

